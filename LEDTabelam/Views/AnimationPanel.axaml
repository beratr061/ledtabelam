<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:LEDTabelam.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="150"
             x:Class="LEDTabelam.Views.AnimationPanel"
             x:DataType="vm:MainWindowViewModel">

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!-- Sol: Kontrol Butonları -->
        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
            <Button Width="48" Height="48" 
                    Command="{Binding ToggleAnimationCommand}"
                    ToolTip.Tip="Oynat/Duraklat (Space)">
                <PathIcon Data="M8,5.14V19.14L19,12.14L8,5.14Z" Width="20" Height="20"/>
            </Button>
            <Button Width="48" Height="48" 
                    Command="{Binding StopAnimationCommand}"
                    ToolTip.Tip="Durdur">
                <PathIcon Data="M6,6H18V18H6V6Z" Width="20" Height="20"/>
            </Button>
        </StackPanel>
        
        <!-- Orta: Hız Ayarı -->
        <StackPanel Grid.Column="1" Margin="24,0" VerticalAlignment="Center">
            <TextBlock Text="Animasyon Hızı" 
                       Foreground="#E0E0E0"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Slider Grid.Column="0"
                        Minimum="1"
                        Maximum="100"
                        Value="{Binding ControlPanel.AnimationSpeed}"
                        VerticalAlignment="Center"/>
                
                <TextBlock Grid.Column="1"
                           Text="{Binding ControlPanel.AnimationSpeed, StringFormat='{}{0} px/s'}"
                           Foreground="#B0B0B0"
                           Width="70"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center"/>
            </Grid>
            
            <TextBlock Text="Kayan yazı animasyonu için hız ayarı. Varsayılan: 20 px/s"
                       Foreground="#808080"
                       FontSize="11"
                       Margin="0,8,0,0"/>
        </StackPanel>
        
        <!-- Sağ: Durum Bilgisi -->
        <Border Grid.Column="2" 
                Background="#252525" 
                CornerRadius="8"
                Padding="16"
                VerticalAlignment="Center">
            <StackPanel Spacing="4">
                <TextBlock Text="Animasyon Durumu"
                           Foreground="#808080"
                           FontSize="11"/>
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="#E0E0E0"
                           FontSize="14"
                           FontWeight="SemiBold"/>
                <TextBlock Text="{Binding Preview.ScrollOffset, StringFormat='Offset: {0} px'}"
                           Foreground="#B0B0B0"
                           FontSize="11"/>
            </StackPanel>
        </Border>
    </Grid>

</UserControl>
