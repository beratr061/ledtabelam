<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LEDTabelam.ViewModels"
        xmlns:views="using:LEDTabelam.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
        x:Class="LEDTabelam.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="{Binding Title}"
        MinWidth="1024"
        MinHeight="600"
        Background="#1E1E1E">

    <Window.Styles>
        <!-- Fluent Design benzeri stiller -->
        <Style Selector="Border.panel">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="4"/>
        </Style>
        <Style Selector="TextBlock.header">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        <Style Selector="TextBlock.label">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#B0B0B0"/>
            <Setter Property="Margin" Value="0,4,0,2"/>
        </Style>
        <Style Selector="Button">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,6"/>
        </Style>
        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#4D4D4D"/>
        </Style>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#0078D4"/>
        </Style>
        <Style Selector="Button.primary:pointerover">
            <Setter Property="Background" Value="#1084D8"/>
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style Selector="Slider">
            <Setter Property="Foreground" Value="#0078D4"/>
        </Style>
        <Style Selector="CheckBox">
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>
        <Style Selector="RadioButton">
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>
        <Style Selector="NumericUpDown">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style Selector="Expander">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
        <Style Selector="Expander /template/ ToggleButton">
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>
    </Window.Styles>

    <Window.KeyBindings>
        <KeyBinding Gesture="Ctrl+S" Command="{Binding SavePngCommand}"/>
        <KeyBinding Gesture="Ctrl+O" Command="{Binding LoadFontCommand}"/>
        <KeyBinding Gesture="Ctrl+OemPlus" Command="{Binding ZoomInCommand}"/>
        <KeyBinding Gesture="Ctrl+OemMinus" Command="{Binding ZoomOutCommand}"/>
        <KeyBinding Gesture="Ctrl+Add" Command="{Binding ZoomInCommand}"/>
        <KeyBinding Gesture="Ctrl+Subtract" Command="{Binding ZoomOutCommand}"/>
    </Window.KeyBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Ãœst Toolbar - Profil YÃ¶netimi -->
        <Border Grid.Row="0" Background="#252525" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Sol: Profil Bilgisi -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                    <Border Background="#1E1E1E" CornerRadius="6" Padding="12,6">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="ðŸ“" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding CurrentProfile.Name, FallbackValue='Profil Yok'}" 
                                       VerticalAlignment="Center" 
                                       FontWeight="SemiBold"
                                       Foreground="#E0E0E0"/>
                        </StackPanel>
                    </Border>
                    <Button x:Name="ManageProfilesButton" Content="âš™ï¸ Profil YÃ¶netimi" 
                            ToolTip.Tip="Profilleri yÃ¶net"/>
                </StackPanel>
                
                <!-- Orta: BoÅŸ -->
                <Panel Grid.Column="1"/>
                
                <!-- SaÄŸ: HÄ±zlÄ± EriÅŸim ButonlarÄ± -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                    <Button Content="PNG" Command="{Binding SavePngCommand}" ToolTip.Tip="PNG Kaydet (Ctrl+S)"/>
                    <Button Content="GIF" Command="{Binding SaveGifCommand}" ToolTip.Tip="GIF Kaydet"/>
                    <Button Content="WebP" Command="{Binding SaveWebPCommand}" ToolTip.Tip="WebP Kaydet"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Ana Ä°Ã§erik AlanÄ± -->
        <Grid Grid.Row="1" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" MinWidth="280"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Sol Panel: Kontrol Paneli -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <views:ControlPanel DataContext="{Binding ControlPanel}"/>
            </ScrollViewer>
            
            <!-- AyÄ±rÄ±cÄ± -->
            <GridSplitter Grid.Column="1" Width="4" Background="#3D3D3D" ResizeDirection="Columns"/>
            
            <!-- SaÄŸ Panel: Ã–nizleme ve DÃ¼zenleyiciler -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <!-- Ã–nizleme alanÄ± minimum 200px, esnek bÃ¼yÃ¼me -->
                    <RowDefinition Height="*" MinHeight="200"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Alt panel: varsayÄ±lan 320px, daha geniÅŸ Ã§alÄ±ÅŸma alanÄ± -->
                    <RowDefinition Height="320" MinHeight="200" MaxHeight="500"/>
                </Grid.RowDefinitions>
                
                <!-- Ã–nizleme Paneli -->
                <views:PreviewPanel Grid.Row="0" DataContext="{Binding Preview}"/>
                
                <!-- AyÄ±rÄ±cÄ± - kullanÄ±cÄ± sÃ¼rÃ¼kleyerek boyut ayarlayabilir -->
                <GridSplitter Grid.Row="1" Height="4" Background="#3D3D3D" ResizeDirection="Rows"
                              HorizontalAlignment="Stretch"/>
                
                <!-- Alt Panel: HD2020 tarzÄ± basit menÃ¼ - ScrollViewer ile taÅŸma korumasÄ± -->
                <TabControl Grid.Row="2" Background="#252525">
                    <TabItem Header="DÃ¼zenleyici">
                        <views:UnifiedEditor DataContext="{Binding UnifiedEditor}"/>
                    </TabItem>
                    <TabItem Header="Animasyon">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <views:AnimationPanel/>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="DÄ±ÅŸa Aktar">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <views:ExportPanel/>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="Playlist">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <views:PlaylistPanel DataContext="{Binding Playlist}"/>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
        
        <!-- Durum Ã‡ubuÄŸu -->
        <Border Grid.Row="2" Background="#252525" Padding="12,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusMessage}" 
                           Foreground="#B0B0B0"
                           FontSize="12"
                           VerticalAlignment="Center"/>
                
                <TextBlock Grid.Column="1" 
                           Text="{Binding ControlPanel.CurrentSettings.Width, StringFormat='Ã‡Ã¶zÃ¼nÃ¼rlÃ¼k: {0}'}" 
                           Foreground="#808080"
                           FontSize="12"
                           Margin="20,0"
                           VerticalAlignment="Center"/>
                
                <TextBlock Grid.Column="2" 
                           Text="{Binding Preview.ZoomLevel, StringFormat='Zoom: %{0}'}" 
                           Foreground="#808080"
                           FontSize="12"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>

</Window>
