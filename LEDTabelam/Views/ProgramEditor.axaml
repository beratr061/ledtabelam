<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:LEDTabelam.ViewModels"
             xmlns:models="using:LEDTabelam.Models"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="320"
             x:Class="LEDTabelam.Views.ProgramEditor"
             x:DataType="vm:ProgramEditorViewModel">

    <Border Background="#2D2D2D" CornerRadius="8" Padding="12">
        <Grid ColumnDefinitions="280,*,220">
            
            <!-- Sol Panel: Öğe Listesi -->
            <Border Grid.Column="0" Background="#252525" CornerRadius="6" Padding="8" Margin="0,0,8,0">
                <Grid RowDefinitions="Auto,*,Auto">
                    
                    <!-- Başlık ve Program No -->
                    <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,8">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <TextBlock Grid.Column="0" Text="Program:" Foreground="#B0B0B0" VerticalAlignment="Center"/>
                            <NumericUpDown Grid.Column="1" Value="{Binding ProgramNumber}" Minimum="1" Maximum="999" 
                                           Width="70" FormatString="000" Margin="8,0"/>
                            <TextBlock Grid.Column="2" Text="/999" Foreground="#606060" VerticalAlignment="Center"/>
                        </Grid>
                        
                        <TextBlock Text="Program Öğeleri" FontWeight="SemiBold" Foreground="#E0E0E0" FontSize="13"/>
                    </StackPanel>
                    
                    <!-- Öğe Listesi -->
                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding Items}" 
                             SelectedItem="{Binding SelectedItem}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="models:TabelaItem">
                                <Border Background="{Binding IsSelected, Converter={x:Static vm:BoolToSelectionBrushConverter.Instance}}"
                                        CornerRadius="4" Padding="8,6" Margin="0,2">
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <!-- Renk Göstergesi -->
                                        <Border Grid.Column="0" Width="12" Height="12" CornerRadius="2" Margin="0,0,8,0"
                                                Background="{Binding Color, Converter={x:Static vm:ColorToBrushConverter.Instance}}"/>
                                        
                                        <!-- İsim ve İçerik -->
                                        <StackPanel Grid.Column="1" Spacing="2">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="11" Foreground="#E0E0E0"/>
                                            <TextBlock Text="{Binding Content}" FontSize="10" Foreground="#808080" 
                                                       MaxWidth="150" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                        
                                        <!-- Pozisyon Bilgisi -->
                                        <TextBlock Grid.Column="2" FontSize="9" Foreground="#606060" VerticalAlignment="Center">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0},{1}">
                                                    <Binding Path="X"/>
                                                    <Binding Path="Y"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- Öğe Ekleme/Silme Butonları -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="4" Margin="0,8,0,0">
                        <Button Content="+ Metin" Command="{Binding AddTextCommand}" Padding="8,4" FontSize="11"/>
                        <Button Content="+ Sembol" Command="{Binding AddSymbolCommand}" Padding="8,4" FontSize="11"/>
                        <Button Content="Sil" Command="{Binding DeleteItemCommand}" Padding="8,4" FontSize="11"/>
                        <Button Content="Kopyala" Command="{Binding DuplicateCommand}" Padding="8,4" FontSize="11"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Orta Panel: Seçili Öğe Ayarları -->
            <Border Grid.Column="1" Background="#252525" CornerRadius="6" Padding="12" Margin="0,0,8,0"
                    IsVisible="{Binding HasSelection}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="12" DataContext="{Binding SelectedItem}">
                        
                        <!-- Öğe Adı ve İçerik -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="Öğe Adı" Foreground="#808080" FontSize="11"/>
                            <TextBox Text="{Binding Name}" FontSize="12"/>
                        </StackPanel>
                        
                        <StackPanel Spacing="4">
                            <TextBlock Text="İçerik" Foreground="#808080" FontSize="11"/>
                            <TextBox Text="{Binding Content}" FontSize="12" AcceptsReturn="True" 
                                     TextWrapping="Wrap" Height="50"/>
                        </StackPanel>
                        
                        <Border Height="1" Background="#3D3D3D"/>
                        
                        <!-- Font Seçimi -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="Font" FontWeight="SemiBold" Foreground="#E0E0E0" FontSize="12"/>
                            <ComboBox ItemsSource="{Binding $parent[UserControl].((vm:ProgramEditorViewModel)DataContext).FontNames}"
                                      SelectedItem="{Binding FontName}"
                                      HorizontalAlignment="Stretch"/>
                        </StackPanel>
                        
                        <Border Height="1" Background="#3D3D3D"/>
                        
                        <!-- Pozisyon -->
                        <TextBlock Text="Pozisyon ve Boyut" FontWeight="SemiBold" Foreground="#E0E0E0" FontSize="12"/>
                        
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" Margin="0,4,0,0">
                            <StackPanel Grid.Row="0" Grid.Column="0" Spacing="2" Margin="0,0,4,0">
                                <TextBlock Text="X" Foreground="#808080" FontSize="10"/>
                                <NumericUpDown Value="{Binding X}" Minimum="0" Maximum="512" Increment="1"/>
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="1" Spacing="2" Margin="4,0,0,0">
                                <TextBlock Text="Y" Foreground="#808080" FontSize="10"/>
                                <NumericUpDown Value="{Binding Y}" Minimum="0" Maximum="512" Increment="1"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="0" Spacing="2" Margin="0,8,4,0">
                                <TextBlock Text="Genişlik" Foreground="#808080" FontSize="10"/>
                                <NumericUpDown Value="{Binding Width}" Minimum="1" Maximum="512" Increment="1"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="1" Spacing="2" Margin="4,8,0,0">
                                <TextBlock Text="Yükseklik" Foreground="#808080" FontSize="10"/>
                                <NumericUpDown Value="{Binding Height}" Minimum="1" Maximum="512" Increment="1"/>
                            </StackPanel>
                        </Grid>
                        
                        <Border Height="1" Background="#3D3D3D"/>
                        
                        <!-- Hizalama -->
                        <TextBlock Text="Hizalama" FontWeight="SemiBold" Foreground="#E0E0E0" FontSize="12"/>
                        
                        <Grid ColumnDefinitions="*,*" Margin="0,4,0,0">
                            <StackPanel Grid.Column="0" Spacing="4" Margin="0,0,8,0">
                                <TextBlock Text="Yatay" Foreground="#808080" FontSize="10"/>
                                <ComboBox SelectedIndex="{Binding HAlign, Converter={x:Static vm:HAlignToIndexConverter.Instance}}"
                                          HorizontalAlignment="Stretch" x:Name="HAlignCombo">
                                    <ComboBoxItem Content="Sol"/>
                                    <ComboBoxItem Content="Orta"/>
                                    <ComboBoxItem Content="Sağ"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Spacing="4" Margin="8,0,0,0">
                                <TextBlock Text="Dikey" Foreground="#808080" FontSize="10"/>
                                <ComboBox SelectedIndex="{Binding VAlign, Converter={x:Static vm:VAlignToIndexConverter.Instance}}"
                                          HorizontalAlignment="Stretch" x:Name="VAlignCombo">
                                    <ComboBoxItem Content="Üst"/>
                                    <ComboBoxItem Content="Orta"/>
                                    <ComboBoxItem Content="Alt"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                        
                        <Border Height="1" Background="#3D3D3D"/>
                        
                        <!-- Kayan Yazı -->
                        <TextBlock Text="Animasyon" FontWeight="SemiBold" Foreground="#E0E0E0" FontSize="12"/>
                        
                        <CheckBox Content="Kayan Yazı" IsChecked="{Binding IsScrolling}" Margin="0,4,0,0"/>
                        
                        <Grid ColumnDefinitions="*,*" IsVisible="{Binding IsScrolling}" Margin="0,4,0,0">
                            <StackPanel Grid.Column="0" Spacing="4" Margin="0,0,8,0">
                                <TextBlock Text="Yön" Foreground="#808080" FontSize="10"/>
                                <ComboBox SelectedIndex="{Binding ScrollDirection, Converter={x:Static vm:ScrollDirToIndexConverter.Instance}}"
                                          HorizontalAlignment="Stretch">
                                    <ComboBoxItem Content="← Sol"/>
                                    <ComboBoxItem Content="→ Sağ"/>
                                    <ComboBoxItem Content="↑ Yukarı"/>
                                    <ComboBoxItem Content="↓ Aşağı"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Spacing="4" Margin="8,0,0,0">
                                <TextBlock Text="Hız" Foreground="#808080" FontSize="10"/>
                                <NumericUpDown Value="{Binding ScrollSpeed}" Minimum="1" Maximum="100" Increment="5"/>
                            </StackPanel>
                        </Grid>
                        
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
            <!-- Seçim Yok Mesajı -->
            <Border Grid.Column="1" Background="#252525" CornerRadius="6" Padding="12" Margin="0,0,8,0"
                    IsVisible="{Binding !HasSelection}">
                <TextBlock Text="Düzenlemek için bir öğe seçin" 
                           Foreground="#606060" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </Border>
            
            <!-- Sağ Panel: Renk ve Hızlı Ayarlar -->
            <Border Grid.Column="2" Background="#252525" CornerRadius="6" Padding="12">
                <StackPanel Spacing="12">
                    
                    <!-- Renk Seçimi -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Renk" FontWeight="SemiBold" Foreground="#E0E0E0" FontSize="12"/>
                        
                        <WrapPanel Orientation="Horizontal">
                            <Button Width="32" Height="32" Background="#FF0000" Margin="2" Click="OnColorRed" ToolTip.Tip="Kırmızı"/>
                            <Button Width="32" Height="32" Background="#00FF00" Margin="2" Click="OnColorGreen" ToolTip.Tip="Yeşil"/>
                            <Button Width="32" Height="32" Background="#FFB000" Margin="2" Click="OnColorAmber" ToolTip.Tip="Amber"/>
                            <Button Width="32" Height="32" Background="#FFFFFF" Margin="2" Click="OnColorWhite" ToolTip.Tip="Beyaz"/>
                            <Button Width="32" Height="32" Background="#00FFFF" Margin="2" Click="OnColorCyan" ToolTip.Tip="Cyan"/>
                            <Button Width="32" Height="32" Background="#FF00FF" Margin="2" Click="OnColorMagenta" ToolTip.Tip="Magenta"/>
                            <Button Width="32" Height="32" Background="#FFFF00" Margin="2" Click="OnColorYellow" ToolTip.Tip="Sarı"/>
                            <Button Width="32" Height="32" Background="#FF8000" Margin="2" Click="OnColorOrange" ToolTip.Tip="Turuncu"/>
                        </WrapPanel>
                    </StackPanel>
                    
                    <Border Height="1" Background="#3D3D3D"/>
                    
                    <!-- Hızlı Hizalama -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Hızlı Hizalama" FontWeight="SemiBold" Foreground="#E0E0E0" FontSize="12"/>
                        
                        <Grid ColumnDefinitions="*,*,*" Margin="0,4,0,0">
                            <Button Grid.Column="0" Content="◀" Height="28" Click="OnAlignLeft" ToolTip.Tip="Sola"/>
                            <Button Grid.Column="1" Content="◆" Height="28" Margin="4,0" Click="OnAlignCenterH" ToolTip.Tip="Ortala"/>
                            <Button Grid.Column="2" Content="▶" Height="28" Click="OnAlignRight" ToolTip.Tip="Sağa"/>
                        </Grid>
                        
                        <Grid ColumnDefinitions="*,*,*" Margin="0,4,0,0">
                            <Button Grid.Column="0" Content="▲" Height="28" Click="OnAlignTop" ToolTip.Tip="Üste"/>
                            <Button Grid.Column="1" Content="◆" Height="28" Margin="4,0" Click="OnAlignCenterV" ToolTip.Tip="Ortala"/>
                            <Button Grid.Column="2" Content="▼" Height="28" Click="OnAlignBottom" ToolTip.Tip="Alta"/>
                        </Grid>
                    </StackPanel>
                    
                    <Border Height="1" Background="#3D3D3D"/>
                    
                    <!-- Hızlı Pozisyon -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Hızlı Pozisyon" FontWeight="SemiBold" Foreground="#E0E0E0" FontSize="12"/>
                        
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" Margin="0,4,0,0">
                            <Button Grid.Row="0" Grid.Column="0" Content="Sol Üst" Height="28" Margin="0,0,2,2" 
                                    Click="OnPosTopLeft" FontSize="10"/>
                            <Button Grid.Row="0" Grid.Column="1" Content="Sağ Üst" Height="28" Margin="2,0,0,2" 
                                    Click="OnPosTopRight" FontSize="10"/>
                            <Button Grid.Row="1" Grid.Column="0" Content="Sol Alt" Height="28" Margin="0,2,2,0" 
                                    Click="OnPosBottomLeft" FontSize="10"/>
                            <Button Grid.Row="1" Grid.Column="1" Content="Sağ Alt" Height="28" Margin="2,2,0,0" 
                                    Click="OnPosBottomRight" FontSize="10"/>
                        </Grid>
                        
                        <Button Content="Tam Genişlik" Height="28" Click="OnFullWidth" Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <Border Height="1" Background="#3D3D3D"/>
                    
                    <!-- Sıralama -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Sıralama" FontWeight="SemiBold" Foreground="#E0E0E0" FontSize="12"/>
                        
                        <Grid ColumnDefinitions="*,*" Margin="0,4,0,0">
                            <Button Grid.Column="0" Content="↑ Yukarı" Height="28" Margin="0,0,2,0" 
                                    Command="{Binding MoveUpCommand}" FontSize="10"/>
                            <Button Grid.Column="1" Content="↓ Aşağı" Height="28" Margin="2,0,0,0" 
                                    Command="{Binding MoveDownCommand}" FontSize="10"/>
                        </Grid>
                    </StackPanel>
                    
                </StackPanel>
            </Border>
            
        </Grid>
    </Border>

</UserControl>
