<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:LEDTabelam.ViewModels"
             xmlns:models="using:LEDTabelam.Models"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="200"
             x:Class="LEDTabelam.Views.PlaylistPanel"
             x:DataType="vm:PlaylistViewModel">

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        
        <!-- Sol: Mesaj Listesi -->
        <Border Grid.Column="0" 
                Background="#252525" 
                CornerRadius="8"
                Padding="8"
                Margin="0,0,8,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Başlık -->
                <TextBlock Grid.Row="0" 
                           Text="Mesaj Listesi"
                           Foreground="#E0E0E0"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                
                <!-- Liste -->
                <ListBox Grid.Row="1"
                         ItemsSource="{Binding Items}"
                         SelectedItem="{Binding SelectedItem}"
                         Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="models:PlaylistItem">
                            <Grid Margin="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="70"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                           Text="{Binding Order, StringFormat='{}{0}.'}"
                                           Foreground="#808080"
                                           VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding Text}"
                                           Foreground="#E0E0E0"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"/>
                                <TextBlock Grid.Column="2" 
                                           Text="{Binding DurationSeconds, StringFormat='{}{0}s'}"
                                           Foreground="#B0B0B0"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="3" 
                                           Text="{Binding Transition}"
                                           Foreground="#808080"
                                           FontSize="10"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <!-- Yeni Mesaj Ekleme -->
                <Grid Grid.Row="2" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" 
                             x:Name="NewMessageTextBox"
                             Watermark="Yeni mesaj ekle..."/>
                    <Button Grid.Column="1" 
                            Content="Ekle" 
                            Margin="8,0,0,0"
                            x:Name="AddMessageButton"/>
                </Grid>
            </Grid>
        </Border>
        
        <!-- Orta: Sıralama Butonları -->
        <StackPanel Grid.Column="1" 
                    VerticalAlignment="Center" 
                    Spacing="4"
                    Margin="0,0,8,0">
            <Button Content="▲" 
                    Width="32" 
                    Height="32"
                    Command="{Binding MoveUpCommand}"
                    ToolTip.Tip="Yukarı Taşı"/>
            <Button Content="▼" 
                    Width="32" 
                    Height="32"
                    Command="{Binding MoveDownCommand}"
                    ToolTip.Tip="Aşağı Taşı"/>
            <Button Content="X" 
                    Width="32" 
                    Height="32"
                    Command="{Binding RemoveSelectedCommand}"
                    ToolTip.Tip="Sil"/>
        </StackPanel>
        
        <!-- Sağ: Ayarlar ve Kontroller -->
        <Border Grid.Column="2" 
                Background="#252525" 
                CornerRadius="8"
                Padding="12">
            <StackPanel Spacing="12">
                <!-- Seçili Mesaj Ayarları -->
                <StackPanel Spacing="4" IsVisible="{Binding SelectedItem, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <TextBlock Text="Seçili Mesaj"
                               Foreground="#E0E0E0"
                               FontWeight="SemiBold"/>
                    
                    <TextBlock Text="Süre (saniye):" Foreground="#B0B0B0" FontSize="11"/>
                    <NumericUpDown Value="{Binding SelectedItem.DurationSeconds}"
                                   Minimum="1"
                                   Maximum="60"/>
                    
                    <TextBlock Text="Geçiş Efekti:" Foreground="#B0B0B0" FontSize="11" Margin="0,8,0,0"/>
                    <ComboBox ItemsSource="{Binding TransitionOptions}"
                              SelectedItem="{Binding SelectedItem.Transition}"
                              HorizontalAlignment="Stretch"/>
                </StackPanel>
                
                <Separator Background="#3D3D3D"/>
                
                <!-- Genel Ayarlar -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Genel Ayarlar"
                               Foreground="#E0E0E0"
                               FontWeight="SemiBold"/>
                    
                    <CheckBox Content="Döngü Modu"
                              IsChecked="{Binding IsLoopEnabled}"/>
                    
                    <TextBlock Text="Varsayılan Süre:" Foreground="#B0B0B0" FontSize="11" Margin="0,8,0,0"/>
                    <NumericUpDown Value="{Binding DefaultDuration}"
                                   Minimum="1"
                                   Maximum="60"/>
                </StackPanel>
                
                <Separator Background="#3D3D3D"/>
                
                <!-- Oynatma Kontrolleri -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Oynatma"
                               Foreground="#E0E0E0"
                               FontWeight="SemiBold"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <Button Content="▶" 
                                Width="40"
                                Command="{Binding PlayCommand}"
                                ToolTip.Tip="Oynat"/>
                        <Button Content="⏸" 
                                Width="40"
                                Command="{Binding PauseCommand}"
                                ToolTip.Tip="Duraklat"/>
                        <Button Content="⏹" 
                                Width="40"
                                Command="{Binding StopCommand}"
                                ToolTip.Tip="Durdur"/>
                    </StackPanel>
                    
                    <TextBlock Text="{Binding CurrentIndex, StringFormat='Mesaj: {0}'}"
                               Foreground="#808080"
                               FontSize="11"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>

</UserControl>
