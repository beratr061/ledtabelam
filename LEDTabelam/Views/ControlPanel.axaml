<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:LEDTabelam.ViewModels"
             xmlns:models="using:LEDTabelam.Models"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="280" d:DesignHeight="800"
             x:Class="LEDTabelam.Views.ControlPanel"
             x:DataType="vm:ControlPanelViewModel">

    <UserControl.Styles>
        <!-- Section Card Stili -->
        <Style Selector="Border.SectionCard">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        
        <!-- Section Title -->
        <Style Selector="TextBlock.SectionTitle">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#0078D4"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <!-- Label -->
        <Style Selector="TextBlock.Label">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#909090"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        
        <!-- Value Text -->
        <Style Selector="TextBlock.Value">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#D0D0D0"/>
        </Style>
        
        <!-- Segmented Button Stili -->
        <Style Selector="RadioButton.Seg">
            <Setter Property="Padding" Value="14,7"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="#B0B0B0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="{TemplateBinding CornerRadius}" 
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter Content="{TemplateBinding Content}" 
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="RadioButton.Seg:checked">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="RadioButton.Seg:pointerover">
            <Setter Property="Background" Value="#363636"/>
        </Style>
        <Style Selector="RadioButton.Seg:checked:pointerover">
            <Setter Property="Background" Value="#1a86dc"/>
        </Style>
        
        <!-- Compact Slider -->
        <Style Selector="Slider.Compact">
            <Setter Property="Margin" Value="0,2,0,0"/>
        </Style>
        
        <!-- Compact NumericUpDown -->
        <Style Selector="NumericUpDown.Compact">
            <Setter Property="Width" Value="55"/>
            <Setter Property="ShowButtonSpinner" Value="False"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </UserControl.Styles>

