<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:LEDTabelam.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="200"
             x:Class="LEDTabelam.Views.SlotEditor"
             x:DataType="vm:SlotEditorViewModel">

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!-- Sol: Slot Bilgileri -->
        <StackPanel Grid.Column="0" Spacing="8" Margin="0,0,12,0">
            <TextBlock Text="{Binding SlotNumberFormatted, StringFormat='Slot: {0}'}" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Foreground="#E0E0E0"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="Hat No:" 
                           Foreground="#B0B0B0"
                           VerticalAlignment="Center"
                           Margin="0,0,8,4"/>
                <TextBox Grid.Row="0" Grid.Column="1" 
                         Text="{Binding RouteNumber}"
                         Watermark="Örn: 34, 19K, M1"
                         Margin="0,0,0,4"/>
                
                <TextBlock Grid.Row="1" Grid.Column="0" 
                           Text="Güzergah:" 
                           Foreground="#B0B0B0"
                           VerticalAlignment="Center"
                           Margin="0,0,8,4"/>
                <TextBox Grid.Row="1" Grid.Column="1" 
                         Text="{Binding RouteText}"
                         Watermark="Örn: Zincirlikuyu - Söğütlüçeşme"
                         Margin="0,0,0,4"/>
                
                <TextBlock Grid.Row="2" Grid.Column="0" 
                           Text="İkon:" 
                           Foreground="#B0B0B0"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>
                <Grid Grid.Row="2" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" 
                             Text="{Binding IconPath}"
                             IsReadOnly="True"
                             Watermark="İkon seçilmedi"/>
                    <Button Grid.Column="1" Content="..." Width="32" Margin="4,0,0,0" x:Name="SelectIconButton"/>
                    <Button Grid.Column="2" Content="X" Width="32" Margin="4,0,0,0" 
                            Command="{Binding RemoveIconCommand}"
                            IsVisible="{Binding IconPath, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                </Grid>
            </Grid>
        </StackPanel>
        
        <!-- Orta: Hizalama ve Stil -->
        <StackPanel Grid.Column="1" Spacing="8" Margin="12,0">
            <TextBlock Text="Hizalama ve Stil" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Foreground="#E0E0E0"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Yatay Hizalama -->
                <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="Yatay:" 
                           Foreground="#B0B0B0"
                           VerticalAlignment="Center"
                           Margin="0,0,8,4"/>
                <ComboBox Grid.Row="0" Grid.Column="1" 
                          ItemsSource="{Binding HorizontalAlignmentOptions}"
                          SelectedItem="{Binding HorizontalAlignment}"
                          Margin="0,0,16,4"/>
                
                <!-- Dikey Hizalama -->
                <TextBlock Grid.Row="0" Grid.Column="2" 
                           Text="Dikey:" 
                           Foreground="#B0B0B0"
                           VerticalAlignment="Center"
                           Margin="0,0,8,4"/>
                <ComboBox Grid.Row="0" Grid.Column="3" 
                          ItemsSource="{Binding VerticalAlignmentOptions}"
                          SelectedItem="{Binding VerticalAlignment}"
                          Margin="0,0,0,4"/>
                
                <!-- Arkaplan -->
                <CheckBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                          Content="Arkaplan"
                          IsChecked="{Binding HasBackground}"
                          Margin="0,0,16,4"/>
                
                <!-- Stroke -->
                <CheckBox Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2"
                          Content="Stroke"
                          IsChecked="{Binding HasStroke}"
                          Margin="0,0,0,4"/>
                
                <!-- Stroke Kalınlığı -->
                <TextBlock Grid.Row="2" Grid.Column="0" 
                           Text="Stroke:" 
                           Foreground="#B0B0B0"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"
                           IsVisible="{Binding HasStroke}"/>
                <NumericUpDown Grid.Row="2" Grid.Column="1" 
                               Value="{Binding StrokeWidth}"
                               Minimum="1"
                               Maximum="3"
                               IsVisible="{Binding HasStroke}"
                               Margin="0,0,16,0"/>
            </Grid>
        </StackPanel>
        
        <!-- Sağ: Butonlar -->
        <StackPanel Grid.Column="2" Spacing="8" VerticalAlignment="Center">
            <Button Content="Kaydet" 
                    Classes="primary"
                    Width="100"
                    Command="{Binding SaveCommand}"/>
            <Button Content="İptal" 
                    Width="100"
                    Command="{Binding CancelCommand}"/>
            <Button Content="Sil" 
                    Width="100"
                    Command="{Binding DeleteCommand}"
                    IsVisible="{Binding !IsNewSlot}"/>
        </StackPanel>
    </Grid>

</UserControl>
