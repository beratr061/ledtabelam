                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
            
            <!-- Actions -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,16,0,0">
                <Button x:Name="RenameButton" Classes="Action" Content="âœï¸ Yeniden AdlandÄ±r" Click="OnRenameClick"/>
