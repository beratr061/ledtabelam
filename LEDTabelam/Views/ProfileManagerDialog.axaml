            <!-- New Profile & Import & Close -->
            <Grid Grid.Row="3" ColumnDefinitions="Auto,Auto,*,Auto,Auto" Margin="0,16,0,0">
                <Button x:Name="NewProfileButton" 
                        Content="âž• Yeni Profil" 
