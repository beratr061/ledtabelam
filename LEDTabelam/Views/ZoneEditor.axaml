<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:LEDTabelam.ViewModels"
             xmlns:models="using:LEDTabelam.Models"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="200"
             x:Class="LEDTabelam.Views.ZoneEditor"
             x:DataType="vm:SlotEditorViewModel">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Başlık ve Zone Ekleme -->
        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                       Text="Zone Düzenleyici (RGB Modunda her zone'a farklı renk atayabilirsiniz)" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Foreground="#E0E0E0"
                       VerticalAlignment="Center"/>
            
            <Button Grid.Column="1" 
                    Content="+ Zone Ekle" 
                    Command="{Binding AddZoneCommand}"/>
        </Grid>
        
        <!-- Zone Listesi -->
        <Border Grid.Row="1" 
                Background="#252525" 
                CornerRadius="4"
                Padding="8">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding Zones}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="4"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="models:Zone">
                            <Border Background="#3D3D3D" 
                                    CornerRadius="4" 
                                    Padding="8"
                                    MinWidth="180">
                                <StackPanel Spacing="4">
                                    <!-- Zone Başlığı -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding Index, StringFormat='Zone {0}'}"
                                                   FontWeight="SemiBold"
                                                   Foreground="#E0E0E0"/>
                                        <Button Grid.Column="1" 
                                                Content="X" 
                                                Width="20" 
                                                Height="20"
                                                Padding="0"
                                                FontSize="10"
                                                Command="{Binding $parent[ItemsControl].((vm:SlotEditorViewModel)DataContext).RemoveZoneCommand}"
                                                CommandParameter="{Binding Index}"/>
                                    </Grid>
                                    
                                    <!-- İçerik -->
                                    <TextBlock Text="İçerik:" Foreground="#B0B0B0" FontSize="11"/>
                                    <TextBox Text="{Binding Content}" 
                                             Watermark="Metin girin... (Enter ile yeni satır)"
                                             AcceptsReturn="True"
                                             TextWrapping="Wrap"
                                             Height="40"
                                             FontSize="11"/>
                                    
                                    <!-- Genişlik -->
                                    <TextBlock Text="{Binding WidthPercent, StringFormat='Genişlik: %{0:F0}'}"
                                               Foreground="#B0B0B0"
                                               FontSize="11"/>
                                    <Slider Minimum="5" 
                                            Maximum="100" 
                                            Value="{Binding WidthPercent}"
                                            Width="160"/>
                                    
                                    <!-- Renk Seçici -->
                                    <TextBlock Text="Renk:" Foreground="#B0B0B0" FontSize="11"/>
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <Button Width="24" Height="24" Background="#FF0000" ToolTip.Tip="Kırmızı"
                                                Click="OnRedColorClick" Tag="{Binding}"/>
                                        <Button Width="24" Height="24" Background="#00FF00" ToolTip.Tip="Yeşil"
                                                Click="OnGreenColorClick" Tag="{Binding}"/>
                                        <Button Width="24" Height="24" Background="#FFB000" ToolTip.Tip="Amber"
                                                Click="OnAmberColorClick" Tag="{Binding}"/>
                                        <Button Width="24" Height="24" Background="#FFFFFF" ToolTip.Tip="Beyaz"
                                                Click="OnWhiteColorClick" Tag="{Binding}"/>
                                    </StackPanel>
                                    
                                    <!-- Mevcut Renk Göstergesi -->
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <Border Width="16" Height="16" CornerRadius="2"
                                                Background="{Binding TextColor, Converter={x:Static vm:ColorToBrushConverter.Instance}}"/>
                                        <TextBlock Text="Seçili Renk" Foreground="#808080" FontSize="10" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <!-- İçerik Tipi -->
                                    <TextBlock Text="Tip:" Foreground="#B0B0B0" FontSize="11"/>
                                    <ComboBox ItemsSource="{x:Static vm:ZoneEditorHelper.ContentTypes}"
                                              SelectedItem="{Binding ContentType}"
                                              HorizontalAlignment="Stretch"
                                              FontSize="11"/>
                                    
                                    <!-- Kayan Yazı -->
                                    <CheckBox Content="Kayan"
                                              IsChecked="{Binding IsScrolling}"
                                              FontSize="11"
                                              IsVisible="{Binding ContentType, Converter={x:Static vm:ContentTypeToVisibilityConverter.Instance}}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
        
        <!-- Zone Görsel Önizleme -->
        <Border Grid.Row="2" 
                Background="#1E1E1E" 
                CornerRadius="4"
                Height="30"
                Margin="0,8,0,0">
            <ItemsControl ItemsSource="{Binding Zones}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="models:Zone">
                        <Border Background="{Binding TextColor, Converter={x:Static vm:ColorToBrushConverter.Instance}}"
                                BorderBrush="#505050"
                                BorderThickness="1"
                                CornerRadius="2"
                                Margin="1"
                                Width="{Binding WidthPercent, Converter={x:Static vm:PercentToWidthConverter.Instance}}">
                            <TextBlock Text="{Binding WidthPercent, StringFormat='%{0:F0}'}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="10"
                                       Foreground="Black"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
    </Grid>

</UserControl>
