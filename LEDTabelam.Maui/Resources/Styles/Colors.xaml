<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- HD2020 Style Dark Theme Color Palette -->
    
    <!-- Primary Colors - LED Display Theme -->
    <Color x:Key="Primary">#FF6B00</Color>
    <Color x:Key="PrimaryLight">#FF8C33</Color>
    <Color x:Key="PrimaryDark">#CC5500</Color>
    
    <!-- Secondary Colors -->
    <Color x:Key="Secondary">#00A8E8</Color>
    <Color x:Key="SecondaryLight">#33BBEE</Color>
    <Color x:Key="SecondaryDark">#0088BB</Color>
    
    <!-- Accent Colors -->
    <Color x:Key="Accent">#00FF00</Color>
    <Color x:Key="AccentAmber">#FFBF00</Color>
    <Color x:Key="AccentRed">#FF3333</Color>
    
    <!-- Background Colors - Dark Theme -->
    <Color x:Key="Background">#1E1E1E</Color>
    <Color x:Key="BackgroundDark">#141414</Color>
    <Color x:Key="BackgroundLight">#2D2D2D</Color>
    
    <!-- Surface Colors -->
    <Color x:Key="Surface">#252526</Color>
    <Color x:Key="SurfaceLight">#333333</Color>
    <Color x:Key="SurfaceDark">#1A1A1A</Color>
    
    <!-- Panel Colors -->
    <Color x:Key="PanelBackground">#2D2D30</Color>
    <Color x:Key="PanelBorder">#3F3F46</Color>
    <Color x:Key="PanelHeader">#3C3C3C</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#CCCCCC</Color>
    <Color x:Key="TextMuted">#808080</Color>
    <Color x:Key="TextDisabled">#555555</Color>
    
    <!-- LED Display Colors -->
    <Color x:Key="LedAmber">#FFBF00</Color>
    <Color x:Key="LedGreen">#00FF00</Color>
    <Color x:Key="LedRed">#FF0000</Color>
    <Color x:Key="LedBlue">#0080FF</Color>
    <Color x:Key="LedWhite">#FFFFFF</Color>
    <Color x:Key="LedOff">#1A1A1A</Color>
    <Color x:Key="LedBackground">#0A0A0A</Color>
    
    <!-- Status Colors -->
    <Color x:Key="StatusOnline">#00CC66</Color>
    <Color x:Key="StatusOffline">#CC3333</Color>
    <Color x:Key="StatusWarning">#FFAA00</Color>
    <Color x:Key="StatusInfo">#3399FF</Color>
    
    <!-- TreeView Colors -->
    <Color x:Key="TreeViewSelected">#094771</Color>
    <Color x:Key="TreeViewHover">#2A2D2E</Color>
    <Color x:Key="TreeViewExpander">#CCCCCC</Color>
    
    <!-- Toolbar Colors -->
    <Color x:Key="ToolbarBackground">#3C3C3C</Color>
    <Color x:Key="ToolbarBorder">#4A4A4A</Color>
    <Color x:Key="ToolbarButtonHover">#505050</Color>
    <Color x:Key="ToolbarButtonPressed">#606060</Color>
    
    <!-- Menu Colors -->
    <Color x:Key="MenuBackground">#2D2D30</Color>
    <Color x:Key="MenuBorder">#454545</Color>
    <Color x:Key="MenuItemHover">#3E3E42</Color>
    <Color x:Key="MenuSeparator">#454545</Color>
    
    <!-- Input Colors -->
    <Color x:Key="InputBackground">#3C3C3C</Color>
    <Color x:Key="InputBorder">#555555</Color>
    <Color x:Key="InputBorderFocused">#007ACC</Color>
    <Color x:Key="InputPlaceholder">#808080</Color>
    
    <!-- Button Colors -->
    <Color x:Key="ButtonPrimary">#0E639C</Color>
    <Color x:Key="ButtonPrimaryHover">#1177BB</Color>
    <Color x:Key="ButtonSecondary">#3C3C3C</Color>
    <Color x:Key="ButtonSecondaryHover">#505050</Color>
    
    <!-- Scrollbar Colors -->
    <Color x:Key="ScrollbarTrack">#1E1E1E</Color>
    <Color x:Key="ScrollbarThumb">#424242</Color>
    <Color x:Key="ScrollbarThumbHover">#555555</Color>
    
    <!-- Standard Colors -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Transparent">Transparent</Color>
    
    <!-- Gray Scale -->
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray700">#333333</Color>
    <Color x:Key="Gray800">#262626</Color>
    <Color x:Key="Gray900">#1A1A1A</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackground}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    
</ResourceDictionary>
